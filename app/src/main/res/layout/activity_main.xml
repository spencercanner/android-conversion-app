<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="50dp"
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_margin="15dp">

    <EditText
        android:layout_weight="0.40"
        android:id="@+id/amount_text_view"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:inputType="numberDecimal"
        android:text="" />

    <Spinner
        android:id="@+id/unit_type_spinner"
        android:layout_weight="0.35"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

        <Spinner
            android:id="@+id/country_spinner"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_container">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="1"
            android:columnOrderPreserved="true"
            android:orientation="horizontal"
            android:rowCount="6"
            android:layout_below="@+id/unit_type_spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tsp_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_tsp_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/tbs_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_tbs_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/shot_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_shot_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/pint_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_pint_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cup_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_cup_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/quart_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_quart_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/gallon_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_gallon_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/oz_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_oz_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/ml_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_ml_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/liter_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/default_liter_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="10dp" />
            </LinearLayout>


        </GridLayout>
    </ScrollView>

</RelativeLayout>
